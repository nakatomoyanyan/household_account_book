<% provide(:title, "Home") %>
<% if logged_in? %>
<h1>家計簿アプリへようこそ！</h1>
<div class="container-home-afer-signin">
    <p>Summary</p>
    <div class="container-list">
        <div class="summary">
            <h1>今年の収支</h1>
            <div class="income">
                <p>収入</p>
                <p>20000円</p>
            </div>
            <div class="expense">
                <p>支出</p>
                <p>10000円</p>
            </div>
            <div class="net">
                <p>計</p>
                <p>10000円</p>
            </div>
        </div>
        <div class="summary">
            <h1>今月の収支</h1>
            <div class="income">
                <p>収入</p>
                <p>20000円</p>
            </div>
            <div class="expense">
                <p>支出</p>
                <p>10000円</p>
            </div>
            <div class="net">
                <p>計</p>
                <p>10000円</p>
            </div>
        </div>
        <div class="easy-form">
            <h1>かんたん入力</h1>
            <div class="form">
                <p>日付</p>
                <input type="text" class="input-form">
            </div>
            <div class="form">
                <p>金額</p>
                <input type="text" class="input-form">
            </div>
            <div class="form">
                <p>名目</p>
                <input type="text" class="input-form">
            </div>
            <p class="link-edit">名目編集はこちら<p>
            <div class="form">
                <p>分類</p>
                <select class="input-form">
                    <option value="option1">収入</option>
                    <option value="option2">固定費</option>
                    <option value="option3">流動費</option>
                </select>
            </div>
            <%= button_to '登録', static_pages_home_url, method: :get, class: 'button-registration' %>
        </div>
    </div>
</div>
<% else %>
<h1>家計を改善できる家計簿アプリ</h1>
<div class="container-list">
    <div class="container-form">
        <div class="container-signin">
            <h1>サインイン</h1>
                <%= form_with url: login_path do |f| %>
                <div class="email">
                    <%= f.label :email, "メールアドレス", class: "form-label" %>
                    <%= f.text_field :email, class: "form-control" %>
                </div>
                <div class="password">
                    <%= f.label :password, "パスワード", class: "form-label" %>
                    <%= f.text_field :password, class: "form-control" %>
                </div>
                <div>
                    <%= f.submit "SignIn", class: "button"%>
                </div>
                <% end %>
        </div>
    </div>
    <div class="container-form">
         <div class="container-signup">
            <h1>サインアップ</h1>
            <p>一緒に家計改善を始めよう!</p>
            <%= button_to 'SignUp', new_user_path, method: :get, class: 'button-signup' %>
        </div>
    </div>
</div>
<% end %>
