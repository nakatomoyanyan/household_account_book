<header>
    <div class="header-container">
        <div class="header-container-title">
            家計簿アプリ
        </div>
        <div class="header-container-list">
            <div class="home">
                <%= link_to "home", households_path(current_user), method: :get, class:"home-button" %>
            </div>
            <div class="income">
                <%= link_to "収入", income_households_path(current_user), method: :get, class:"income-button" %>
            </div>
            <div class="expense">
                <%= link_to "支出", expense_households_path(current_user), method: :get, class:"income-button" %>
            </div>
            <div class="signout">
                <%= link_to "SignOut", logout_path, data: { turbo_method: :delete }, class:"signout-button" %>
            </div>
        </div>
    </div>
    <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
</header>
